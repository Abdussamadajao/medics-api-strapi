{
  "kind": "collectionType",
  "collectionName": "hospitals",
  "info": {
    "singularName": "hospital",
    "pluralName": "hospitals",
    "displayName": "hospital"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "email": {
      "type": "email",
      "required": true
    },
    "website": {
      "type": "string"
    },
    "phone": {
      "type": "integer",
      "max": 10,
      "required": true
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::categorie.categorie",
      "inversedBy": "hospitals"
    },
    "description": {
      "type": "richtext"
    },
    "opening_hours": {
      "type": "time"
    },
    "closing_hours": {
      "type": "time"
    },
    "opening_days": {
      "type": "string"
    }
  }
